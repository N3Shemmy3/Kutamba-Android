<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/activity_padding_horizontal"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
    android:layout_height="250dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gruvbox_grid" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingVertical="@dimen/view_padding_horizontal"
        android:paddingHorizontal="@dimen/activity_padding_horizontal">

        <Button
            android:id="@+id/itemAction"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/outline_play_arrow_24"
            app:iconGravity="textTop" />

        <Space
            android:id="@+id/spacer"
            android:layout_width="@dimen/view_padding_horizontal"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/itemAction" />

        <TextView
            android:id="@+id/itemText"
            android:layout_alignParentStart="true"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/spacer"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:text="@string/lorem" />

        <TextView
            android:id="@+id/itemTitle"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/spacer"
            android:layout_alignStart="@id/itemText"
            android:textColor="@android:color/white"
            android:layout_above="@id/itemText"
            android:text="Odd Taxi" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>